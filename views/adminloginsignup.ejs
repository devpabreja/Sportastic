        <link rel="stylesheet" href="/forms/player-form/css/style.css">

        <!-- Javascript -->
        <script src="/lib/jquery.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/forms/admin-form/js/scripts.js"></script>
        <script src="/forms/admin-form/js/jquery.backstretch.min.js"></script>


